<component name="MotionTracking" kind="active" namespace="App">
    <comment>Component that manage Motion Tracking</comment>
    <import_port_type>App/SenseHat/SenseHatPort/ICMPortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>
    <import_serializable_type>App/MotionTracking/MotionTrackingType/AnglesSerializableAi.xml</import_serializable_type>
    <import_serializable_type>App/MotionTracking/MotionTrackingType/VectorSerializableAi.xml</import_serializable_type>

    <ports>
        <port name="DataIn" data_type="App::ICMPort" kind="async_input">
            <comment>
            Port for sending ICM data
            </comment>
        </port>
                <!-- Output ping port -->
        <port name="PingIn" data_type="Svc::Ping" kind="async_input" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
        <!-- Output ping port -->
        <port name="PingOut" data_type="Svc::Ping" kind="output" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
    </ports>
    <telemetry>
        <channel id="0" name="MOTIONTRACKING_ANGLES" data_type="App::AnglesTlm">
            <comment>
                Angles values
            </comment>
        </channel>
        <channel id="1" name="MOTIONTRACKING_GYRO" data_type="App::VectorTlm">
            <comment>
                Gyroscope values
            </comment>
        </channel>
        <channel id="2" name="MOTIONTRACKING_ACCEL" data_type="App::VectorTlm">
            <comment>
                Acceleration values
            </comment>
        </channel>
        <channel id="3" name="MOTIONTRACKING_MAGN" data_type="App::VectorTlm">
            <comment>
                Magnetique field values
            </comment>
        </channel>
    </telemetry>
    <events>
        <event id="0" name="MS_DATA" severity="ACTIVITY_LO" format_string="Data Receive from Sense Hat"  >
            <comment>
            Motion tracking data receive
            </comment>        
        </event>
        <event id="1" name="MS_ERROR" severity="WARNING_HI" format_string = "Motion Tracking error" >
            <comment>
            Error Motion tracking
            </comment>
        </event>
    </events>
</component>