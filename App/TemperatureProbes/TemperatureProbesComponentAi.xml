<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../Autocoders/Python/schema/ISF/component_schema.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<component name="TemperatureProbes" kind="active" namespace="App">
    <comment>Component handling the FlexTrak temperature probes</comment>
       
    <import_port_type>App/FlexTrak/TemperaturePort/TemperaturePortAi.xml</import_port_type>

    <ports>
        <port name="internal" data_type="App::Temperature" kind="async_input" max_number="1">
            <comment>
                Internal temperature in °C
            </comment>
        </port>
        <port name="external" data_type="App::Temperature" kind="async_input" max_number="1">
            <comment>
                External temperature in °C, provided by the DS18B20 probe
            </comment>
        </port>
    </ports>

    <commands>
        <command kind="async" opcode="0" mnemonic="TempProb_SetInternalLevel">
            <comment>
                Set internal temperature warning level
            </comment>
            <args>
                <arg name="temperature" type="I16">
                    <comment>Temperature in °C</comment>
                </arg>          
            </args>
        </command>
        <command kind="async" opcode="1" mnemonic="TempProb_SetExternalLevel">
            <comment>
                Set external temperature warning level
            </comment>
            <args>
                <arg name="temperature" type="I16">
                    <comment>Temperature in °C</comment>
                </arg>          
            </args>
        </command>
    </commands>

    <telemetry>
        <channel id="0" name="TempProb_InternalTemperature" data_type="I16">
            <comment>
                Internal temperature in °C
            </comment>
        </channel>
        <channel id="1" name="TempProb_ExternalTemperature" data_type="I16">
            <comment>
                External temperature in °C
            </comment>
        </channel>
    </telemetry>

    <events>
        <event id="0" name="TempPro_LowInternalWarning" severity="WARNING_HI" format_string="Low internal temperature: %d" >
            <comment>
                Sent when internal temperature reachs low level
            </comment>
            <args>
                <arg name="temperature" type="I16">
                    <comment>Temperature in °C</comment>
                </arg>          
            </args>
        </event>
        <event id="1" name="TempPro_LowExternalWarning" severity="WARNING_HI" format_string="Low external temperature: %d" >
            <comment>
                Sent when external temperature reachs low level
            </comment>
            <args>
                <arg name="temperature" type="I16">
                    <comment>Temperature in °C</comment>
                </arg>          
            </args>
        </event>
     </events>
</component>

