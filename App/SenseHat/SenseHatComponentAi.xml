<component name="SenseHat" kind="active" namespace="App">
    <comment>Component that manage SenseHat</comment>
    <import_port_type>App/SenseHat/SenseHatPort/SenseHatFloatDataPortAi.xml</import_port_type>
    <import_port_type>Svc/Sched/SchedPortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>
    <ports>
        <port name="SHTTemperature" data_type="App::SenseHatFloatData" kind="output">
            <comment>
            Port for sending Temperature
            </comment>
        </port>
        <port name="SHTHumidity" data_type="App::SenseHatFloatData" kind="output">
            <comment>
           Port for sending humidity
            </comment>
        </port>
        <port name="Schedin" data_type="Sched" kind="sync_input">
            <comment>
            The rate groupe scheduler input
            </comment>
        </port>
                <!-- Output ping port -->
        <port name="PingIn" data_type="Svc::Ping" kind="async_input" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
        <!-- Output ping port -->
        <port name="PingOut" data_type="Svc::Ping" kind="output" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
    </ports>
    <commands>
        <command kind="async" opcode="0" mnemonic="MS_GET_TM">
            <comment>
            Send telemetry to SEnseHat
            </comment>
        </command>
    </commands>
    <events>
        <event id="0" name="MS_DATA" severity="ACTIVITY_LO" format_string="Sense hat data update"  >
            <comment>
            Sense hat data update
            </comment>        
        </event>
        <event id="1" name="MS_DATA_TEST" severity="ACTIVITY_LO" format_string = "temp : %6.2f CÂ°" >
            <comment>
            Received TM data
            </comment>
            <args>
                <arg name="tm" type="F32">
                    <comment>The data</comment>
                </arg>          
            </args>
        </event>
        <event id="3" name="MS_ERROR" severity="WARNING_HI" format_string = "Sense update data error" >
            <comment>
            Received TM data
            </comment>
        </event>
    </events>
</component>