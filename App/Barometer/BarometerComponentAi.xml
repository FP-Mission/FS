<component name="Barometer" kind="active" namespace="App">
    <comment>Component that manage Barometer</comment>
    <import_port_type>App/SenseHat/SenseHatPort/LPSPortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>
    <ports>
        <port name="DataIn" data_type="App::LPSPort" kind="async_input">
            <comment>
            Port for sending SHT data
            </comment>
        </port>
                <!-- Output ping port -->
        <port name="PingIn" data_type="Svc::Ping" kind="async_input" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
        <!-- Output ping port -->
        <port name="PingOut" data_type="Svc::Ping" kind="output" max_number="1">
            <comment>
            The ping input port
            </comment>
        </port>
    </ports>
    <telemetry>
        <channel id="0" name="BAROMETER_TEMP" data_type="F32">
            <comment>
                Temperature value
            </comment>
        </channel>
        <channel id="1" name="BAROMETER_PRESS" data_type="F32">
            <comment>
                Pressure value
            </comment>
        </channel>
        <channel id="2" name="BAROMETER_ALT" data_type="U16">
            <comment>
                Altitude value
            </comment>
        </channel>
    </telemetry>
    <events>
        <event id="0" name="MS_DATA" severity="ACTIVITY_LO" format_string="Data Receive from Sense Hat: temperature: %.2f CÂ°, pressure:  %.2f hPa, Altitude: %d m"  >
            <comment>
            Barometer data receive
            </comment>
            <args>
                <arg name="temp" type="F32">
                    <comment>LPS temp</comment>
                </arg>    
                <arg name="pres" type="F32">
                    <comment>LPS pres</comment>
                </arg>
                <arg name="alt" type="U16">
                    <comment>alt calc</comment>
                </arg>      
            </args>        
        </event>
        <event id="1" name="MS_ERROR" severity="WARNING_HI" format_string = "Barometer error" >
            <comment>
            Error barometer
            </comment>
        </event>
    </events>
</component>